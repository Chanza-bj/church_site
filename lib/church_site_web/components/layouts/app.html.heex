        .container {
            position: relative;
            max-width: 2200px;
            margin: 0 auto;
            padding: 0 90px;
        }

        .header-right {
            position: absolute;
            right: 50px;
            top: 5px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .logo-container-wrapper {
            display: flex;
            justify-content: center;
            width: 95%;
            padding: 25px 0 5px;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
            margin: 0 auto;  /* Center the container */
            max-width: fit-content;  /* Contain width to content */
        }

        .church-logo {
            width: 85px;  /* Adjusted size to match image */
            height: auto;
            margin-right: 10px;  /* Space between logo and text */
        }

        .site-title {
            font-family: 'Poppins', sans-serif;
            color: #1B3F8F;
            line-height: 1.2;
            text-align: left;
        }

        .church-name {
            font-weight: 600;
            font-size: 32px;  /* Larger font size for church name */
            display: block;  /* Makes it take full width */
        }

        .denomination {
            font-size: 24px;  /* Smaller font size for "Seventh-day Adventist" */
            display: block;
        }

        .registered {
            font-size: 12px;
            vertical-align: super;
        }

        .social-icon {
            color: #666;
            font-size: 16px;
            text-decoration: none;
        }

        .social-icon:hover {
            color: #333;
        }

        .search-box {
            display: flex;
            align-items: center;
            margin-left: 15px;
        }

        .search-box input[type="search"] {
            padding: 5px 10px;
            border: 1px solid #ccc;
            border-radius: 15px;
            font-size: 14px;
            width: 200px;
            outline: none;
        }

        .search-box button {
            background: none;
            border: none;
            color: #666;
            padding: 5px;
            margin-left: -30px;
            cursor: pointer;
        }

        .search-box button:hover {
            color: #333;
        }

        .main-nav {
            background-color: #1B3F8F;
            margin-top: 0;  /* Remove any margin */
        }

        .nav-menu {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            justify-content: center;
            gap: 10px;  /* Further reduced gap between items */
        }

        .nav-menu li a {
            color: white;
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
            font-size: 13px;  /* Slightly reduced font size */
            font-weight: 500;
            display: block;
            padding: 6px 0;  /* Further reduced vertical padding */
            transition: color 0.3s ease;
        }

        .nav-menu li a:hover,
        .nav-menu li a.active {
            color: #FFD700;
        }

        .main-nav .container {
            max-width: 1800px;
        }

        .slider-container {
            position: relative;
            width: 100%;
            height: 600px;
            overflow: hidden;
        }

        .slider {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .slide {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out; /* Smoother transition */
        }

        .slide.active {
            opacity: 1;
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .slide-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            width: 100%;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
            transition-delay: 0.8s;  /* Delay text appearance */
        }

        .slide.active .slide-content {
            opacity: 1;
        }

        .slide-content h2 {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 20px;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .slide-content p {
            font-size: 24px;
            font-style: italic;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
        }

        .slider-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(27, 63, 143, 0.7); /* Navy blue with transparency */
            color: white;
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
        }

        .slider-button:hover {
            background: rgba(27, 63, 143, 0.9);
        }

        .slider-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .slider-dot.active {
            background: white;
        }

        .prev {
            left: 20px;
        }

        .next {
            right: 20px;
        }

        .welcome-section {
            padding: 120px 0 60px;  /* Increased top padding from 60px to 120px */
            background-color: #fff;
        }

        .welcome-container {
            max-width: 1800px;
            margin: 0 auto;
            padding: 0 50px;
            display: flex;
            gap: 50px;
            align-items: flex-start;
        }

        .welcome-content {
            flex: 1;
            padding-right: 20px;
        }

        .welcome-image {
            flex: 1;
            max-width: 600px;
            margin-top: -40px;  /* Just added this line to pull image up slightly */
        }

        .welcome-image img {
            width: 100%;
            height: auto;
            border: 8px solid #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        footer {
            background: #000;
            color: #fff;
            padding: 40px 50px;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            gap: 40px;
        }

        .footer-column {
            flex: 1;
        }

        .footer-column h3 {
            border-bottom: 1px solid #fff;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .footer-copyright {
            display: flex;
            justify-content: space-between;
            padding: 20px 50px;
            background: #000;
            color: #fff;
        }

        .social-links {
            text-align: center;
            margin-top: 20px;
        }

        .social-links a {
            display: inline-block;
            margin: 0 5px;  /* Even spacing between icons */
        }

        .address-block {
            text-align: center;
            margin-top: 15px;
        }

        .footer-column img {
            display: block;
            margin: 0 auto;
        }

        .menu-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 998;
        }

        .sticky-nav {
            visibility: hidden;
            opacity: 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: #1B3F8F;
            z-index: 1000;
            padding: 10px 0;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .sticky-nav.visible {
            visibility: visible;
            opacity: 1;
        }

        .sticky-nav .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .sticky-logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .sticky-logo img {
            height: 35px;
            width: auto;
        }

        .sticky-logo .church-text {
            color: white;
            font-size: 16px;
            font-weight: 500;
            font-family: 'Poppins', sans-serif;
        }

        .sticky-logo .registered {
            font-size: 8px;
            vertical-align: super;
        }

        .sticky-menu {
            display: flex;
            gap: 25px;
            align-items: center;
        }

        .sticky-menu .nav-item {
            color: white;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            font-family: 'Poppins', sans-serif;
            letter-spacing: 0.5px;
        }

        .sticky-menu .nav-item:hover {
            opacity: 0.8;
        }

        /* Reset any potential interfering styles */
        body {
            margin: 0;
            padding: 0;
        }

        * {
            box-sizing: border-box;
        }

        .dropdown:hover .dropdown-menu {
            display: block !important;
        }

        .dropdown-menu a:hover {
            background-color: #f5f5f5 !important;
        }

        .nav-menu .dropdown-menu {
            display: none;
            position: absolute !important;
            top: 100% !important;
            left: 0 !important;
            background: white !important;
            min-width: 200px !important;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1) !important;
            border-radius: 4px !important;
            padding: 10px 0 !important;
            z-index: 1000 !important;
        }

        .nav-menu .dropdown {
            position: relative !important;
        }

        .nav-menu .dropdown:hover .dropdown-menu {
            display: block !important;
        }

        .nav-menu .dropdown-menu a {
            color: #1B3F8F !important;
            padding: 8px 20px !important;
            display: block !important;
            text-decoration: none !important;
            font-size: 12px !important;
            transition: background-color 0.3s ease !important;
        }

        .nav-menu .dropdown-menu a:hover {
            background-color: #f5f5f5 !important;
        }

        /* Add transition for smoother hover effect */
        .nav-menu .dropdown-menu {
            transform: translateY(10px);
            opacity: 0;
            transition: all 0.3s ease-in-out;
            pointer-events: none;
        }

        .nav-menu .dropdown:hover .dropdown-menu {
            transform: translateY(0);
            opacity: 1;
            pointer-events: auto;
        }

        /* Ensure space is reserved when nav becomes fixed */
        .nav-spacer {
            height: 60px;
            display: none;
        }

        .nav-spacer.visible {
            display: block;
        }
